<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00ff0000"
    >

    <TextView
        android:fontFamily="@font/nanumsquareotfregular"
        android:id="@+id/onwait_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="내역이 없습니다."
        android:textColor="@color/color_bolder"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_above="@+id/onwait_bottom"
        android:id="@+id/onwait_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ff0000"
        />

    <RelativeLayout
        android:id="@+id/onwait_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="bottom"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_light_bolder"
            android:layout_alignParentTop="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/onwait_rescompletelayout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:id="@+id/onwait_reservation_imageview"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/ic_icon_logo"
                        android:backgroundTint="@color/color_bolder" />

                    <TextView
                        android:id="@+id/onwait_reservation_txtview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="45dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumsquareotfregular"
                        android:layout_centerVertical="true"
                        android:text="예약 완료"
                        android:textColor="@color/color_bolder"
                        android:textSize="16sp" />

                    <View
                        android:layout_alignParentRight="true"
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:background="@color/color_light_bolder"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/onwait_waitmatchinglayout"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/onwiat_matching_imageview"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_onwait_purple"
                        android:backgroundTint="@color/color_bolder" />

                    <TextView
                        android:id="@+id/onwait_matching_txtview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="45dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumsquareotfregular"
                        android:layout_centerVertical="true"
                        android:text="매칭 대기"
                        android:textColor="@color/color_bolder"
                        android:textSize="16sp" />
                    <View
                        android:layout_alignParentRight="true"
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:background="@color/color_light_bolder"
                        />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/onwait_mymenulayout"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/onwait_my_imageview"
                            android:layout_width="19dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/ic_icon_shop"
                            android:backgroundTint="@color/color_bolder" />

                        <TextView
                            android:id="@+id/onwait_my_txtview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/nanumsquareotfregular"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/onwait_my_imageview"
                            android:text="My"
                            android:textColor="@color/color_bolder"
                            android:textSize="15sp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>