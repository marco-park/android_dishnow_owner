<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/next_gra_button"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="20dp"
    >

    <!--요청시간-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="17dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/item_call_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="요청시간 : 오늘  "
            android:fontFamily="@font/nanumsquareotfregular"
            android:textColor="@color/color_white"
            />
        <TextView
            android:id="@+id/item_user_calltime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="19:30"
            android:fontFamily="@font/nanumsquareotfregular"
            android:textColor="@color/color_white"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_call_layout"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"

        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/item_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:fontFamily="@font/nanumsquareotfregular"
            android:text="_userid_"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/item_user_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:fontFamily="@font/nanumsquareotfbold"
            android:text="8명"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:layout_toRightOf="@id/item_userid"/>

        <TextView
            android:id="@+id/item_user_arrivetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareotfbold"
            android:gravity="end"
            android:text="19시 30분"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:layout_toRightOf="@id/item_user_number"/>

    </RelativeLayout>


</RelativeLayout>