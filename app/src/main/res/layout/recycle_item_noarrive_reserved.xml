<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:background="@drawable/item_notarrive_reserved"
    android:layout_marginLeft="15dp"
    android:padding="8dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:fontFamily="@font/nanumsquareotfregular"
                android:gravity="top"
                android:text="_userid_"
                android:textColor="@color/color_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_user_arrivetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nanumsquareotfbold"
                android:text="19시 30분"
                android:textColor="@color/color_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_user_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareotfbold"
                android:gravity="left"
                android:text="8명"
                android:textColor="@color/color_black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="18dp"
                android:orientation="horizontal"
                android:gravity="top"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nanumsquareotfregular"
                    android:text="요청시간 : 오늘  "
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/item_user_calltime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nanumsquareotfregular"
                    android:text="19:30"
                    android:textColor="@color/color_black"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/recycle_item_noarrive_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도착하지 않았나요?"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_red"
            android:textSize="15sp"
            android:fontFamily="@font/nanumsquareotfregular"/>

        <Button
            android:id="@+id/recycle_item_arrive_button"
            android:layout_width="62dp"
            android:layout_height="32dp"
            android:layout_marginRight="62dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/signin_button"
            android:fontFamily="@font/nanumsquareotfbold"
            android:gravity="center"
            android:text="도착"
            android:textAllCaps="false"
            android:textColor="@color/color_violet"
            android:textSize="11dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:layout_alignParentRight="true" />

        <Button
            android:id="@+id/recycle_item_noarrive_button"
            android:layout_width="62dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:background="@drawable/signin_button"
            android:fontFamily="@font/nanumsquareotfbold"
            android:gravity="center"
            android:text="미도착"
            android:textAllCaps="false"
            android:textColor="@color/color_violet"
            android:textSize="11dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>