<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#E3D9FF"
                android:endColor="#E3D9FF"
                />
            <stroke
                android:width="3dp"
                android:color="#E3D9FF" />
            <corners
                android:radius="25pt" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#E3D9FF"
                android:startColor="#E3D9FF"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#E3D9FF" />
            <corners
                android:radius="25pt" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#00FFFFFF"
                android:startColor="#00FFFFFF"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#E3D9FF" />
            <corners
                android:radius="25pt" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>