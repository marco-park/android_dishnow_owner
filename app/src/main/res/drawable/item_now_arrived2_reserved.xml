<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#EEEEEE"
                android:endColor="#EEEEEE"
                />
            <stroke
                android:width="3dp"
                android:color="#EEEEEE" />
            <corners
                android:radius="25pt" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#EEEEEE"
                android:startColor="#EEEEEE"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#EEEEEE" />
            <corners
                android:radius="25pt" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#EEEEEE"
                android:startColor="#EEEEEE"
                android:angle="0"
                android:type="linear"
                />
            <stroke
                android:width="0dp"
                android:color="@color/color_bolder" />
            <corners
                android:radius="5pt" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
